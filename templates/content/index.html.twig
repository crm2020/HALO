{% extends 'base.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <h1>Content index</h1>

    <table class="table" id="lijst">
        <thead>
            <tr>
                <th>Id</th>
                <th>Create_date</th>
                <th>Title</th>
                <th>Seotext</th>
                <th>Content</th>
                <th>Image</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.createDate ? content.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ content.title }}</td>
                <td>{{ content.seotext }}</td>
                <td>{{ content.content }}</td>
                <td>{{ content.image }}</td>
                <td>{% if content.category.content is defined %}{{ content.category.content }}{% endif %}</td>
                <td>
                    <a href="{{ path('content_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('content_edit', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('content_new') }}">Create new</a>
{% endblock %}
